doctype html
html(lang="fr")
  head
    title= title
    
    link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
    // bower:css
    link(rel='stylesheet', href='../bower_components/material-design-lite/material.min.css')
    // endbower
    link(rel='stylesheet', href='/stylesheets/style.css')
    meta(name="viewport", content="width=device-width, user-scalable=sno")
  body
    .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      .enfos-header.mdl-layout__header.mdl-layout__header--waterfall
        .mdl-layout__header-row
          span.enfos-title.mdl-layout-title
            h3 ENFO'S TEAM
          // Add spacer, to align navigation to the right in desktop
          .enfos-header-spacer.mdl-layout-spacer
          .enfos-search-box.mdl-textfield.mdl-js-textfield.mdl-textfield--expandable.mdl-textfield--floating-label.mdl-textfield--align-right.mdl-textfield--full-width
            label.mdl-button.mdl-js-button.mdl-button--icon(for='search-field')
              i.material-icons search
            .mdl-textfield__expandable-holder
              input#search-field.mdl-textfield__input(type='text')
          // Navigation
          .enfos-navigation-container
            nav.enfos-navigation.mdl-navigation
              a.mdl-navigation__link.mdl-typography--text-uppercase(href='') Héros
              a.mdl-navigation__link.mdl-typography--text-uppercase(href='') Plateau
              a.mdl-navigation__link.mdl-typography--text-uppercase(href='') Règles
          span.enfos-mobile-title.mdl-layout-title
            h3 ENFO'S TEAM
          button#more-button.enfos-more-button.mdl-button.mdl-js-button.mdl-button--icon.mdl-js-ripple-effect
            i.material-icons more_vert
          ul.mdl-menu.mdl-js-menu.mdl-menu--bottom-right.mdl-js-ripple-effect(for='more-button')
            li.mdl-menu__item 
              a(href="/login") login
            li.mdl-menu__item 4.4 KitKat
            li.mdl-menu__item(disabled='') 4.3 Jelly Bean
            li.mdl-menu__item enfos History
      .enfos-drawer.mdl-layout__drawer
        span.mdl-layout-title
          h3 ENFO'S TEAM
        nav.mdl-navigation
          a.mdl-navigation__link.mdl-typography--text-uppercase(href='/heros') Héros
          a.mdl-navigation__link.mdl-typography--text-uppercase(href='plateaux') Plateau
          a.mdl-navigation__link.mdl-typography--text-uppercase(href='') Règles
          .enfos-drawer-separator
      .enfos-content.mdl-layout__content
        block content
        footer.enfos-footer.mdl-mega-footer
          .mdl-mega-footer--top-section
            .mdl-mega-footer--right-section
              a.mdl-typography--font-light(href='#top')
                | Back to Top
                i.material-icons expand_less
          .mdl-mega-footer--middle-section
            p.mdl-typography--font-light Enfo's team © 2016
          .mdl-mega-footer--bottom-section
            a.enfos-link.mdl-typography--font-light(href='') Blog
            a.enfos-link.mdl-typography--font-light(href='') Privacy Policy
    // bower:js
    script(src='../bower_components/material-design-lite/material.min.js')
    script(src='../bower_components/hammerjs/hammer.js')
    script(src="/javascripts/common.js")
    // endbower
    block script
